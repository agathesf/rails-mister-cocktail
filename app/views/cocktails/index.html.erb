<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/1600x900/?cocktails);">
  <div class="container">
    <h1>Create your own <strong>cocktails</strong> on <strong>Mix&Twist</strong>!</h1>
    <p>Cheers! Have fun 🍸</p>
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-ghost" %>
  </div>
</div>

<div class="container">
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://source.unsplash.com/1600x900/?cocktail)">
        <%= link_to cocktail.name, cocktail_path(cocktail), class: "cocktail-name"%>
      </div>
    <% end %>
  </div>
</div>
